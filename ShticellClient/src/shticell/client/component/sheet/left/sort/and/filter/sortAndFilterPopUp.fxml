<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--Right Part (sorting and filtering)-->

<VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="474.0" prefWidth="386.0" spacing="10" styleClass="popUp" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shticell.client.component.sheet.left.sort.and.filter.SortingAndFilteringController">
    <children>
        <!--Sorting-->
        <Label text="Sort" textAlignment="CENTER" />
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10">
                    <Label text="From Cell:" />
                    <TextField fx:id="fromCellFieldSortField" prefHeight="25.0" prefWidth="59.0" promptText="e.g., A1" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="175.0" spacing="10" GridPane.columnIndex="1">
                    <Label text="To Cell:" />
                    <TextField fx:id="toCellFieldSortField" prefHeight="25.0" prefWidth="59.0" promptText="e.g., B5" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10" GridPane.rowIndex="1">
                    <children>
                        <Label text="Sort By" />
                        <ListView fx:id="checkboxListView" prefHeight="25.0" prefWidth="59.0" />
                    </children>
                </HBox>
            </children>
        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="applySortButton" mnemonicParsing="false" text="Apply" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="revertSortButton" mnemonicParsing="false" text="Revert" />
                    </children>
                </HBox>
            </children>
        </GridPane>

        <!--Filtering-->
        <Label text="Filter">
            <VBox.margin>
                <Insets top="60.0" />
            </VBox.margin>
        </Label>
        <GridPane alignment="TOP_CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10">
                    <Label text="From Cell:" />
                    <TextField fx:id="fromCellFieldFilter" prefHeight="25.0" prefWidth="59.0" promptText="e.g., A1" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="175.0" spacing="10" GridPane.columnIndex="1">
                    <Label text="To Cell:" />
                    <TextField fx:id="toCellFieldFilter" prefHeight="25.0" prefWidth="66.0" promptText="e.g., B5" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10" GridPane.rowIndex="1">
                    <children>
                        <Label text="Columns: " />
                        <ListView fx:id="checkboxListViewFilterColumns" prefHeight="25.0" prefWidth="59.0" />
                    </children>
                </HBox>                 </children>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="42.0" prefWidth="278.0">
            <children>
                <Label text="Filter By ">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Label>
                <ListView fx:id="checkboxListViewFilterWords" prefHeight="20.0" prefWidth="142.0">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </ListView>
            </children>
        </HBox>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="applyFilterButton" mnemonicParsing="false" text="Apply" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="revertFilterButton" mnemonicParsing="false" text="Revert" />
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>
