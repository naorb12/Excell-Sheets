<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="dashboardVbox" alignment="CENTER" prefHeight="616.0" prefWidth="987.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shticell.client.component.dashboard.DashboardController">
   <GridPane prefHeight="525.0" prefWidth="873.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="688.0" minWidth="10.0" prefWidth="502.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="479.0" minWidth="10.0" prefWidth="285.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints maxHeight="172.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="291.0" minHeight="10.0" prefHeight="154.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="192.0" minHeight="0.0" prefHeight="53.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="176.0" minHeight="10.0" prefHeight="176.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Label fx:id="infoMessageLabel" maxWidth="1.7976931348623157E308" prefHeight="45.0" prefWidth="192.0" styleClass="info-label" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="1" />
      
          <!-- TableView to Display Sheets -->
          <TableView fx:id="sheetTableView" prefHeight="156.0" prefWidth="554.0" GridPane.rowIndex="1">
              <columns>
                  <TableColumn fx:id="sheetNameColumn" prefWidth="151.0" text="Sheet Name" />
                  <TableColumn fx:id="ownerColumn" prefWidth="96.0" text="Owner" />
                  <TableColumn fx:id="sheetSizeColumn" prefWidth="108.0" text="Size" />
                  <TableColumn fx:id="permissionColumn" prefWidth="180.0" text="Permission" />
              </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
          <!-- UserPermissions TableView -->
          <TableView fx:id="userPermissionsTableView" prefHeight="175.0" prefWidth="260.0" GridPane.rowIndex="3">
              <columns>
                  <TableColumn fx:id="userPermissionsNameColumn" prefWidth="151.0" text="Username" />
                  <TableColumn fx:id="userPermissionsTypeColumn" prefWidth="150.0" text="Permission Type" />
                  <TableColumn fx:id="userPermissionsStatusColumn" prefWidth="150.0" text="Status" />
              </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <!-- Title -->
                <Label contentDisplay="CENTER" style="-fx-font-size: 24px;" text="Dashboard of Sheets" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="81.0" prefWidth="554.0" GridPane.rowIndex="2">
            <children>
            
                <Label style="-fx-font-size: 24px;" text="Permissions" />
            </children>
         </HBox>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                 <Button fx:id="addSheetButton" onAction="#onAddSheet" prefHeight="25.0" prefWidth="157.0" text="Add New Sheet" />
                 <Button fx:id="viewSheetButton" disable="true" onAction="#onViewSheet" prefHeight="25.0" prefWidth="194.0" text="View Selected Sheet">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Button>
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="207.0" prefWidth="275.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
               <Label contentDisplay="CENTER" prefHeight="17.0" prefWidth="159.0" text="Request Permission" />
               <HBox alignment="CENTER" prefHeight="41.0" prefWidth="192.0">
                  <children>
                     <Button fx:id="requestReaderButton" disable="true" mnemonicParsing="false" onAction="#onRequestReaderPermission" prefHeight="25.0" prefWidth="122.0" text="Reader">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="requestWriterButton" disable="true" mnemonicParsing="false" onAction="#onRequestWriterPermission" prefHeight="25.0" prefWidth="113.0" text="Writer">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
               <Label prefHeight="25.0" prefWidth="140.0" text="Handle Request">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Label>
               <HBox alignment="CENTER" prefHeight="44.0" prefWidth="192.0">
                  <children>
                     <Button fx:id="approveRequestButton" disable="true" mnemonicParsing="false" onAction="#onApprovePermissionRequest" prefHeight="25.0" prefWidth="114.0" text="Approve">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="denyRequestButton" disable="true" mnemonicParsing="false" onAction="#onDenyPermissionRequest" prefHeight="25.0" prefWidth="109.0" text="Deny">
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children>
   </GridPane>

    <HBox alignment="BOTTOM_RIGHT" prefHeight="38.0" prefWidth="870.0" spacing="10">
        <Button fx:id="logoutButton" onAction="#logout" text="Logout">
         <HBox.margin>
            <Insets right="90.0" />
         </HBox.margin></Button>
    </HBox>
</VBox>
