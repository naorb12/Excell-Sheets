<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="473.0" prefWidth="382.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="left.LeftController">
    <children>
      <HBox alignment="CENTER" prefHeight="179.0" prefWidth="246.0" VBox.vgrow="ALWAYS">
         <children>
            <GridPane alignment="CENTER" prefHeight="193.0" prefWidth="400.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="designButton" mnemonicParsing="false" text="Design" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="167.0" prefWidth="180.0" GridPane.columnIndex="1">
                     <children>
                        <Button fx:id="sortingFilteringButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="227.0" text="Sorting and Filtering" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
                        <Button fx:id="graphsButton" mnemonicParsing="false" text="Graphs" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Button fx:id="dynamicAnalysisButton" mnemonicParsing="false" text="Dynamic Analysis" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="117.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
             <VBox alignment="CENTER" prefHeight="293.0" prefWidth="320.0" spacing="10">

                 <!-- Adding new range -->
                 <Label text="Add New Range" />

                 <HBox spacing="10">
                     <Label text="Range Name:" />
                     <TextField fx:id="rangeNameField" prefHeight="25.0" prefWidth="130.0" promptText="Enter range name" />
                 </HBox>

                 <HBox spacing="10">
                     <Label text="From Cell:" />
                     <TextField fx:id="fromCellField" prefHeight="25.0" prefWidth="38.0" promptText="e.g., A1" />
                     <Label text="To Cell:" />
                     <TextField fx:id="toCellField" prefHeight="25.0" prefWidth="58.0" promptText="e.g., B5" />
                 </HBox>

                 <Button fx:id="addRangeButton" onAction="#handleAddRange" text="Add Range" />

                 <!-- ComboBox to select ranges -->
                 <Label text="Select Range" />
                 <ComboBox fx:id="rangeComboBox" maxWidth="-Infinity" onAction="#handleSelectRange" prefHeight="25.0" prefWidth="134.0" promptText="Select range" />

                 <!-- TextArea to show cells within the selected range -->
                 <Label text="Cells in Range" />
                 <TextArea fx:id="rangeDetailsArea" editable="false" prefHeight="18.0" prefWidth="420.0" />

                 <!-- Button to delete the selected range -->
                 <Button fx:id="deleteRangeButton" onAction="#handleDeleteRange" text="Delete Range" />

             </VBox>
         </children>
      </HBox>
    </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="10.0" />
   </padding>
</VBox>
