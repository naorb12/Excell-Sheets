<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--Left Part (design)-->
<VBox styleClass="popUp" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="left.design.DesignPopUpController" alignment="CENTER" maxWidth="-Infinity" prefHeight="525.0" prefWidth="278.0" spacing="10">
    <children>
        <!-- Adjust Column Width -->
        <Label text="Adjust Column Width" />
        <ComboBox fx:id="columnWidthSelector" maxWidth="-Infinity" prefHeight="25.0" prefWidth="168.0" promptText="Select Column" />
        <Spinner fx:id="columnWidthSpinner" editable="true" maxWidth="100" />

        <!-- Adjust Row Height -->
        <Label text="Adjust Row Height" />
        <ComboBox fx:id="rowSelector" maxWidth="-Infinity" prefHeight="25.0" prefWidth="119.0" promptText="Select Row" />
        <Spinner fx:id="rowHeightSpinner" editable="true" maxWidth="100" />

        <!-- Text Alignment -->
        <Label text="Text Alignment" />
        <ComboBox fx:id="columnAlignmentSelector" maxWidth="-Infinity" prefHeight="25.0" prefWidth="158.0" promptText="Select Column" />
        <ComboBox fx:id="alignmentSelector" maxWidth="-Infinity" onAction="#handleUpdateTextAlignment" prefHeight="25.0" prefWidth="147.0" promptText="Select Alignment">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Left" />
                    <String fx:value="Center" />
                    <String fx:value="Right" />
                </FXCollections>
            </items>
        </ComboBox>
        <!-- Change Background Color -->
        <Label text="Change Cell Color" />
        <ComboBox fx:id="cellSelector" maxWidth="-Infinity" prefHeight="25.0" prefWidth="161.0" promptText="Select Cell (e.g., A1)" />
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                    <children>
                        <ColorPicker fx:id="colorPickerBackground" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#handleUpdateBackgroundColor" prefHeight="27.0" prefWidth="113.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <ColorPicker fx:id="colorPickerTextColor" onAction="#handleUpdateTextColor" prefHeight="27.0" prefWidth="113.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Background Color" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                    <children>
                        <Label text="Text Color" />
                    </children>
                </HBox>
            </children>
        </GridPane>
        <Button fx:id="colorUndoButton" onAction="#handleUndoColor" text="Undo Color" />
    </children>
</VBox>