<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="left.RangesPopUpController">

    <!-- Adding new range -->
    <Label text="Add New Range" />

    <HBox spacing="10">
        <Label text="Range Name:" />
        <TextField fx:id="rangeNameField" promptText="Enter range name" />
    </HBox>

    <HBox spacing="10">
        <Label text="From Cell:" />
        <TextField fx:id="fromCellField" promptText="e.g., A1" />
        <Label text="To Cell:" />
        <TextField fx:id="toCellField" promptText="e.g., B5" />
    </HBox>

    <Button onAction="#handleAddRange" text="Add Range" />

    <!-- ComboBox to select ranges -->
    <Label text="Select Range" />
    <ComboBox fx:id="rangeComboBox" maxWidth="-Infinity" onAction="#handleSelectRange" prefHeight="25.0" prefWidth="134.0" promptText="Select range" />

    <!-- TextArea to show cells within the selected range -->
    <Label text="Cells in Range" />
    <TextArea fx:id="rangeDetailsArea" editable="false" prefHeight="100" prefWidth="200" />

    <!-- Button to delete the selected range -->
    <Button onAction="#handleDeleteRange" text="Delete Range" />

</VBox>
